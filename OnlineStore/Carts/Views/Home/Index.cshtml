        .nivo-controlNav a {
            display: inline-block;
            width: 22px;
            height: 26px;
            text-indent: -9999px;
            border: 2px solid #fff;
            margin: 0 2px;
            cursor: pointer;
            -moz-border-radius: 20px;
            -webkit-border-radius: 20px;
            border-radius: 20px;
        }

            .nivo-controlNav a:hover, .nivo-controlNav a.active {
                background: #fff;
