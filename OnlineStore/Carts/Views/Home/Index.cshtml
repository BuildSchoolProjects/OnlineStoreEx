    }

    .nivo-box {
        display: block;
        position: absolute;
        z-index: 5;
        overflow: hidden;
    }

        .nivo-box img {
            display: block;
        }

    /* Caption styles */
    .nivo-caption {
        position: absolute;
        left: 0;
        top: 33.9%;
        color: #fff;
        width: 100%;
        text-align: center;
        z-index: 8;
        padding: 0 0 0 37.3%;
        overflow: hidden;
        display: none;
        -webkit-box-sizing: border-box;
        /* Safari/Chrome, other WebKit */
        -moz-box-sizing: border-box;
        /* Firefox, other Gecko */
